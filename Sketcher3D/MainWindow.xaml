<Window x:Class="Sketcher3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sketcher3D"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Button Content="Show Point" HorizontalAlignment="Center" Margin="0,373,0,0"
         VerticalAlignment="Top" Height="52" Width="244" Click="Button_Click" FontWeight="Bold" FontSize="20"/>

        <TextBox x:Name="txtX" HorizontalAlignment="Left" Margin="57,38,0,500"
         Width="127" Height="46" Text="Enter X" FontSize="16" TextAlignment="Center" TextChanged="txtX_TextChanged"/>

        <TextBox x:Name="txtY" HorizontalAlignment="Center" Margin="0,38,0,500"
         Width="128" Height="46" Text="Enter Y" FontSize="16" TextAlignment="Center" TextChanged="txtY_TextChanged"/>

        <TextBox x:Name="txtZ" HorizontalAlignment="Left" Margin="610,38,0,500"
         Width="128" Height="46" Text="Enter Z" FontSize="16" TextAlignment="Center" TextChanged="txtZ_TextChanged"/>

        <TextBox x:Name="txtOutput" HorizontalAlignment="Center" Margin="0,195,0,244"
         Width="244" Text="Coordinates" FontSize="16" TextAlignment="Center" TextChanged="txtOutput_TextChanged"/>

    </Grid>
</Window>

<Window x:Class="Sketcher3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sketcher3D"
        mc:Ignorable="d"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="Sketcher3D" Height="720" Width="1200">
    <DockPanel>
        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Save (.skt)" Click="SaveSkt_Click"/>
                <MenuItem Header="Save GNU (.dat)" Click="SaveGnu_Click"/>
                <MenuItem Header="Save STL (.stl)" Click="SaveStl_Click"/>
                <Separator/>
                <MenuItem Header="Load STL (.stl)" Click="LoadStl_Click"/>
                <Separator/>
                <MenuItem Header="Clear" Click="Clear_Click"/>
            </MenuItem>
            <MenuItem Header="_Transform">
                <MenuItem Header="Translate" Click="Translate_Click"/>
                <MenuItem Header="Scale" Click="Scale_Click"/>
                <MenuItem Header="Rotate X" Click="RotateX_Click"/>
                <MenuItem Header="Rotate Y" Click="RotateY_Click"/>
                <MenuItem Header="Rotate Z" Click="RotateZ_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Cuboid"   Click="Cuboid_Click"/>
            <Button Content="Cube"     Click="Cube_Click"/>
            <Button Content="Cylinder" Click="Cylinder_Click"/>
            <Button Content="Cone"     Click="Cone_Click"/>
            <Button Content="Sphere"   Click="Sphere_Click"/>
            <Button Content="Pyramid"  Click="Pyramid_Click"/>
        </ToolBar>

        <!-- 3D View -->
        <h:HelixViewport3D Name="View3D"
                           ShowCoordinateSystem="True"
                           ShowViewCube="True">
            <h:HelixViewport3D.Camera>
                <PerspectiveCamera Position="200,200,400"
                                   LookDirection="-200,-200,-400"
                                   UpDirection="0,0,1"
                                   FieldOfView="45"/>
            </h:HelixViewport3D.Camera>

            <!-- Lights -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="-1,-1,-2"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <AmbientLight Color="#404040"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!-- Container for models -->
            <ModelVisual3D x:Name="SceneRoot"/>
        </h:HelixViewport3D>
    </DockPanel>
</Window>
